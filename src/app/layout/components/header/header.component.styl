:host {
  display: flex;
  height: 55vh;
  flex-direction: column;
  background-image: radial-gradient(circle farthest-corner at 275% 275%, #80bdeb, #0a253a);

  .container {
    h1 {
      color: #fff;
      font-family: Poppins, sans-serif;
      font-size: 72px;
      font-weight: 700;
      letter-spacing: -.05ch;
      line-height: 72px;
      margin: 16px 0;
    }

    p {
      color: #38b87c;
      font-family: Poppins, sans-serif;
      font-size: 32px;
      font-weight: 400;
      letter-spacing: -.05ch;
      margin-bottom: 60px;
    }

    a {
      background-color: #f08320;
      border-radius: 22px;
      color: #f3f4f5;
      line-height: 44px;
      text-align: center;
      text-decoration: none;
      width: 450px;
    }
  }
}
